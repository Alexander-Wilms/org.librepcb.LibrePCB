{
    "app-id": "org.librepcb.LibrePCB",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "librepcb",
    "finish-args": [
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network", /* required for downloading libraries */
        "--filesystem=home" /* required for storing workspace, libraries etc. */
    ],
    "modules": [
        {
            "name": "librepcb",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LibrePCB/LibrePCB",
                    "tag": "0.1.7",
                    "commit": "ba553c6fbe53ac2f1eadfc337881285705f2fcc3"
                }
            ]
        }
    ]
}

{
    "app-id": "org.librepcb.LibrePCB",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "librepcb",
    "finish-args": [
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network", /* required for downloading libraries */
        "--filesystem=home" /* required for storing workspace, libraries etc. */
    ],
    "modules": [
        {
            "name": "librepcb",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DUSE_OPENCASCADE=0"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LibrePCB/LibrePCB",
                    "tag": "1.0.0-rc1",
                    "commit": "2d9ea3c230ef8aa5c431216a3daac829b56a617c"
                }
            ]
        }
    ]
}

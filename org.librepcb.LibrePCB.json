{
    "app-id": "org.librepcb.LibrePCB",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "librepcb",
    "finish-args": [
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network", /* required for downloading libraries */
        "--filesystem=home" /* required for storing workspace, libraries etc. */
    ],
    "modules": [
        {
            "name": "librepcb",
            "buildsystem": "cmake",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LibrePCB/LibrePCB",
                    "tag": "0.1.6",
                    "commit": "c4f31642899f0ed6b535fe3edafbd3315eddd490"
                }
            ]
        }
    ]
}
